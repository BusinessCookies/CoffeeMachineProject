<WelcomeScreen>:
    name: 'WS'
    Image:
        source:'Data/Img/Background.jpg'
    BoxLayout:
        orientation:'vertical'
        BoxLayout:
            orientation:'vertical'
            Easyclock:
                id:'easyclock'
                text:self.text
                font_size: 60
                #pos_hint:{'x':0 , 'y':0.25}
            Label: 
                text:'Please make sure the coffee machine\nis ready to make a coffee\nbefore ordering it'
                font_size: 25
                halign: 'center'
            PinLabel:
                text:self.text
                font_size: 60
        BoxLayout:
            orientation:'vertical'
            GridLayout:
                spacing: 10
                padding: 10
                cols:3
                Button:
                    text: "1"
                    on_press: root.do_action("1")
                Button:
                    text: "2"
                    on_press: root.do_action("2")
                Button:
                    text: "3"
                    on_press: root.do_action("3")
            GridLayout:
                spacing: 10
                padding: 10
                cols:3
                Button:
                    text: "4"
                    on_press: root.do_action("4")
                Button:
                    text: "5"
                    on_press: root.do_action("5")
                Button:
                    text: "6"
                    on_press: root.do_action("6")
            GridLayout:
                spacing: 10
                padding: 10
                cols:3
                Button:
                    text: "7"
                    on_press: root.do_action("7")
                Button:
                    text: "8"
                    on_press: root.do_action("8")
                Button:
                    text: "9"
                    on_press: root.do_action("9")
            GridLayout:
                spacing: 10
                padding: 10
                cols:3
                Button:
	                text: 'Update'
	                on_press:root.do_action("update")
                Button:
                    text: "0"
                    on_press: root.do_action("0")
                Button:
                    text: "Del"
                    on_press: root.do_action("del")

                    
<UnregisteredScreen>
    name:'US'
    canvas.before:
        Color:
            rgba: (0.4,0.45,0.5,0.1)
        Rectangle:
            pos: self.pos
            size: self.size
    Image:
        source:'Data/Img/Background.jpg'
    Label:
        markup: True
        text:'[color=#ff0000]You are not registered \nin the database\nPlease go in room 570 \nto register[/color]'
        font_size:35
        halign:'center'


<ChooseCoffeeScreen>:
    name: 'CCS'
    Image:
        source:'Data/Img/Background.jpg'
        
    FloatLayout:
        BoxLayout:
            pos_hint:{'x':0,'top':1}
            size_hint_y:0.1
            orientation: 'horizontal'
            ImageButton:
                source:'Data/Img/Setup.png'
                on_press: root.do_action('setupB', 0, 0)
            Image:
                source:'Data/Img/WLAN.png'
            Easyclock:
                id:'easyclock'
                text:self.text
                font_size: 25

		GridLayout:
			size_hint_y: 0.3
            pos_hint:{'x':0,'top':0.9}
            spacing: 20
            padding: 40
            cols: 2
            Button:
	            text: 'Expresso'
	            on_press: root.do_action('Expresso',0,0)
	            on_release: app.root.current='third'
	        Button: 
	            text: 'Double Expresso'
	            on_press: root.do_action('Double Expresso',0,0)
                on_release: app.root.current='third'
	            #size_hint_y: 1
	        Button: 
	            text: 'Coffee'
	            on_press: root.do_action('Coffee',0,0)
                on_release: app.root.current='third'
	            #size_hint_y: 1
	        Button: 
	            text: 'Double Coffee'
	            on_press: root.do_action('Double Coffee',0,0)
                on_release: app.root.current='third'
	    Monney:
		    pos_hint:{'x':0,'top':0.6}
		    size_hint_y:0.2
	        id:AmountOfMoney
	        font_size: 35
	        halign:"center"

	    BoxLayout:
		    pos_hint:{'x':0,'top':0.4}
	        size_hint_y:0.4
	        orientation: 'vertical'
	        canvas.before:
	            Color:
	                rgba: (0.4,0.45,0.4,0.40)
	            Rectangle:
	                pos: self.pos
	                size: self.size
	        padding:15
	        spacing:40
			Label:
				pos_hint:{'x':0,'y':0.45}
		        text:'Set MyCoffee :'
				font_size: 23
	        BoxLayout:
	            orientation:'horizontal'
	            Beans_slider:
		            size_hint_x:0.8
	                id:slider_beans
	                min: 1
	                max: 5
	                step: 1
	                on_touch_down:root.update_beans(self.value)
	                on_touch_move:root.update_beans(self.value)
	            Label:
			        text: '%s /5' % int(slider_beans.value)
	                size_hint_x:0.2
	        BoxLayout:
	            orientation:'horizontal'
	            Water_slider:
	                id: slider_quantity
	                min: 70
	                max: 240
	                step: 5
	                on_touch_down:root.update_water(self.value)
	                on_touch_move:root.update_water(self.value)
                Label:
                    #pos_hint:{'x':0,'y':0}
                    size_hint_x:0.2
                    text: '%s mL' % int(slider_quantity.value)
				
			Button: 
                text: 'My Coffee'
                size_hint_x:0.4
                #size_hint_y:0.3
                pos_hint:{'x':0.3, 'y':0}
                on_press: root.do_action('My Coffee',slider_beans.value,slider_quantity.value)
                on_release: app.root.current='third'

<ChooseCoffeeAdminScreen>:
    name: 'CCAS'
    Image:
        source:'Data/Img/Background.jpg'   
    FloatLayout:
        id:'toolbar'
        BoxLayout:
            pos_hint:{'x':0.4,'y':0.48}
            orientation: 'horizontal'
            ImageButton:
                source:'Data/Img/Exit.png'
                on_release: exit()
    BoxLayout:
        orientation: 'vertical'
        spacing: 20
        GridLayout:
            spacing: 20
            padding: 40
            cols: 2
            size_hint_x:1
            size_hint_y:0.5
            pos_hint:{'x': 0,'y':0.3}
            Button:
                text: 'Expresso'
                on_press: root.do_action('Expresso')
                #on_release: app.root.current='third'
                size_hint_y: 0.05
                
            Button: 
                text: 'Double Expresso'
                on_press: root.do_action('Double Expresso')
                #on_release: app.root.current='third'
                size_hint_y: 0.05
            Button: 
                text: 'Coffee'
                on_press: root.do_action('Coffee')
                #on_release: app.root.current='third'
                size_hint_y: 0.05
            Button: 
                text: 'Double Coffee'
                on_press: root.do_action('Double Coffee')
                #on_release: app.root.current='third'
                size_hint_y: 0.05
            Button: 
                text: 'Filter'
                on_press: root.do_action('Filter')
                size_hint_y: 0.05
            Button:
                text: 'Menu Long'
                on_press: root.do_action("MenuLong")
                size_hint_y: 0.05
                

        GridLayout:
            cols:1
            padding:20
            spacing:20
            size_hint_x:0.4
            size_hint_y:0.12
            pos_hint:{'x': 0.3,'y':0.2}
            Button:
                text: 'Menu Short'
                on_press: root.do_action("MenuShort")
        GridLayout:
            size_hint_x:1
            size_hint_y:0.12
            pos_hint:{'x': 0,'y':0.1}
            cols:2
            padding:20
            spacing:20
            Button:
                text: 'Left'
                on_press: root.do_action("Left")
            Button:
                text: 'Right'
                on_press: root.do_action("Right")
        GridLayout:
            size_hint_x:0.4
            size_hint_y:0.12
            pos_hint:{'x': 0.3,'y':0}
            cols:1
            padding:20
            spacing:20
            Button:
                text: 'Back'
                on_release: app.root.current='second'
                
<DankeScreen>:
