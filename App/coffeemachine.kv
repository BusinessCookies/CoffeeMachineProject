        Rectangle:
            pos: self.pos
            size: self.size
    Image:
        source:'Data/Img/Background.jpg'   
    BoxLayout:
        orientation: 'vertical'
        Image:
            source:'Data/Img/coffeethanks.jpg'
        BoxLayout:
            orientation: 'vertical'
            Label:
                text: '[b]Please answer:\nHow clean is the machine?[/b]'
                font_size: 35
                halign:'center'
                markup:True
            BoxLayout:
                orientation: 'horizontal'
                ImageButton:
                    source: 'Data/Img/Unhappy.png'
                    on_press: root.do_action("Bad")
                    on_release: app.root.current='danke2'
                ImageButton:
                    source: 'Data/Img/Medium.png'
                    on_press: root.do_action("Medium")
                    on_release: app.root.current='danke2'
                ImageButton:
                    source: 'Data/Img/Happy.png'
                    on_press: root.do_action("Good")
                    on_release: app.root.current='danke2'

